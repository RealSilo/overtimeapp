<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= status_label(post.status) %>
  </td>
  <td id='<%= "edit_post_#{post.id}" %>'>
    <%= link_to 'Edit', edit_post_path(post) if policy(post).update?  %>
  </td>
  <td id='<%= "delete_post_#{post.id}" %>'>
    <%= link_to 'Delete', post_path(post), method: :delete %>
  </td>
</tr>