<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= status_label(post.status) %>
  </td>
  <td id='<%= "edit_post_#{post.id}" %>'>
    <% if policy(post).update? %>
      <%= link_to edit_post_path(post) do  %>
        <span class="fa fa-pencil index-icon"></span>
      <% end %>
    <% end %>
  </td>
  <td id='<%= "delete_post_#{post.id}" %>'>
    <%= link_to post_path(post), method: :delete do %>
      <span class="fa fa-trash index-icon"></span>
    <% end %>
  </td>
</tr>